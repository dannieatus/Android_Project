<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:paddingTop="16dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">


        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_item_name"
                android:layout_gravity="right"
                android:hint="Name"
                android:minLines="1"
            android:maxLength="30"
            android:maxLines="1" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edit_item_count"
                android:layout_gravity="center_horizontal"
                android:hint="Count"
                android:minLines="1"
            android:maxLines="1" />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/edit_item_price"
                android:layout_gravity="center_horizontal"
                android:hint="Price"
                android:minLines="1"
            android:maxLines="1" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Price Compare in Store"
            android:id="@+id/view_price_store"
            android:layout_gravity="center_horizontal"
            android:minLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edit_item_store_info"
            android:layout_gravity="center_horizontal"
            android:hint="Store"
            android:minLines="1"
            android:textSize="20dp"
            android:singleLine="true" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/edit_imageButton"
            android:layout_gravity="center_horizontal"
            android:minLines="1"
            android:text="RETAKE ITEM PICTURE" />

        <ImageView
            android:id="@+id/edit_item_image"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel_edit_item"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"/>

        <Space
            android:layout_width="3px"
            android:layout_height="20px" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/save_edit_item"
            android:background="@color/colorPrimary"
            android:textColor="@color/textColorPrimary"/>
    </LinearLayout>
</RelativeLayout>